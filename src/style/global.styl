$color-led-on = rgb(91, 240, 80);
$color-led-off = #888;
$color-led-warn = rgb(240, 171, 80);
$color-led-replace = rgb(240, 80, 80);

#app {
    font-family: 'Avenir', Helvetica, Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-align: center;
    color: #2c3e50;
}

.btn {

    display: inline-block;
    position: relative;
    border-radius: 0.2em;
    width: 100%;
    margin-bottom: 0.2em;
    font-size: 1.2em;

    &-bg {
        background-color: #ccc;
    }

    &.delete, &.close {
        width: auto;
    }

    &.delete {
        color: #c40000;
    }
}

.toggle {
    display: inline-block;
    position: relative;
    vertical-align: top;
    text-align: left;
    margin: 0 1em 1em 0;
    background-color: #efefef;
    border-radius: 5px;
    padding: 1.5em;
    width: 9.5em;
    height: 11em;

    .name {
        position: absolute;
        display: block;
        bottom: 1.5em;
        left: 1.5em;
        width: calc(100% - 3em);
        text-transform: capitalize;
    }

    .indicator {
        position: relative;
        width: 100%;
        text-align: left;


        .led {
            display:block;
            width: 0.5em;
            height: 0.5em;
            border-radius:0.25em;

            &.on {
                background-color: $color-led-on;
            }

            &.off {
                background-color: $color-led-off;
            }

            &.replace {
                background-color: $color-led-replace;
            }

            &.warn {
                background-color: $color-led-warn;
            }
        }
    }

    &.on {
        .indicator .led {
            background-color: $color-led-on;
        }
    }

    &.off {
        .indicator .led {
            background-color: $color-led-off;
        }
    }

    &.unavailable {
        opacity: 0.5;
    }

}

.list-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    position: relative;
    text-align: left;
    border-radius: 5px;
    width: 100%;
    height: 4em;

    & > div {
        height:100%;
        padding: 1em 2em;
    }

    .name {
        flex:1;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding-left: 0;
        cursor: pointer;
        color: white;
    }

    .indicator {
        flex: 0 0 5em;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;

        .led {
            display:block;
            width: 0.5em;
            height: 0.5em;
            border-radius:0.25em;

            &.on {
                background-color: $color-led-on;
            }

            &.off {
                background-color: $color-led-off;
            }

            &.replace {
                background-color: $color-led-replace;
            }

            &.warn {
                background-color: $color-led-warn;
            }
        }
    }

    &.on {
        .indicator .led {
            background-color: $color-led-on;
        }
    }

    &.off {
        .indicator .led {
            background-color: $color-led-off;
        }
    }

    &.unavailable {
        opacity: 0.5;
    }

    &.selected {
        font-weight: bold;
    }

}

.table-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    position: relative;
    text-align: left;
    border-radius: 5px;
    width: 100%;
    padding: 1.4em 0 0 0;

    &.hide {
        // padding: 0;
    }

    & > div {
        flex: 1;

        &:first-child {
            flex: 2;
        }

        &:last-child {
            text-align: right;
        }
    }
}

i.fas {
    &.on {
        color: $color-led-on;
    }

    &.off {
        color: $color-led-off;
    }

    &.replace {
        color: $color-led-replace;
    }

    &.warn {
        color: $color-led-warn;
    }
}

.underline {
    width:100%;
    padding-top: 1em;
    margin-bottom: 2em;
    border-bottom:1px solid #ccc;
}
