#app {
    font-family: 'Avenir', Helvetica, Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-align: center;
    color: #2c3e50;
}

.btn {

    display: block;
    position: relative;
    padding: 2em;
    border-radius: 0.2em;
    width: 100%;

    &-bg {
        background-color: #ccc;

    }
}

.toggle {
    display: inline-block;
    position: relative;
    vertical-align: top;
    text-align: left;
    margin: 0 1em 1em 0;
    background-color: #efefef;
    border-radius: 5px;
    padding: 1.5em;
    width: 8em;
    height: 10em;

    .name {
        position: absolute;
        display: block;
        bottom: 1.5em;
        left: 1.5em;
        width: calc(100% - 3em);
        text-transform: capitalize;
    }

    .indicator {
        position: relative;
        width: 100%;
        text-align: left;

        .led {
            display:block;
            width: 0.5em;
            height: 0.5em;
            border-radius:0.25em;
            margin: auto;
        }
    }

    &.on {
        .indicator .led {
            background-color: rgb(91, 240, 80);
        }
    }

    &.off {
        .indicator .led {
            background-color: #888;
        }
    }

    &.unavailable {
        opacity: 0.5;
    }

}

.list-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    position: relative;
    text-align: left;
    border-radius: 5px;
    width: 100%;
    height: 4em;

    & > div {
        height:100%;
        padding: 1em;
    }

    .name {
        flex:1;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding-left: 0;
        cursor: pointer;
        color: white;
    }

    .indicator {
        flex: 0 0 3em;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;

        .led {
            display:block;
            width: 0.5em;
            height: 0.5em;
            border-radius:0.25em;
        }
    }

    &.on {
        .indicator .led {
            background-color: rgb(91, 240, 80);
        }
    }

    &.off {
        .indicator .led {
            background-color: #888;
        }
    }

    &.unavailable {
        opacity: 0.5;
    }

    &.selected {
        font-weight: bold;
    }

}
