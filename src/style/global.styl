$color-led-on = #14e2b9;
$color-green-bg = #09cda6;
$color-blue-bg = #09b6cd;
$color-led-off = #888;
$color-led-warn = #cd9109;
$color-led-replace = #cd0956;

#app {
    font-family: 'Avenir', Helvetica, Arial, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-align: center;
    color: #2c3e50;
}

h1 {
    font-size: 1.5em;
}

h2 {
    font-size: 1.3em;
}

h3 {
    font-size: 1.2em;
}

h4 {
    font-size: 1.1em;
    font-weight: normal;
}

.view {

    &-menu {
        display: inline-block;
        width: 5em;
        text-align: center;
        font-size: 1rem;
        height: 100vh;
        vertical-align: top;
        background-color: #000;
        padding-top: 2em;
    }

    &-viewport {
        display: inline-block;
        width: calc(100% - 5em);
        text-align: center;
        font-size: 1rem;
        height: 100vh;
        vertical-align: top;
        background-color: rgba(62, 65, 79, 1);
        color: #444;
    }

    &-page {
        border-top-left-radius: 2em;
        border-bottom-left-radius: 2em;
        background-color: #EDEDEC;
    }
}

.list-rounded {
    border-top-right-radius: 2em;
    border-bottom-right-radius: 2em;
}

.bg-list {
    background: rgba(62, 65, 79, 1);
    color: white;
}

.btn {

    display: inline-block;
    position: relative;
    border-radius: 0.2em;
    margin-bottom: 0.2em;
    color: #444;

    &-bg {
        background-color: #ccc;
    }

    &.delete, &.close {
    }

    &.close {
        background: none;
    }

    &.delete {
        background-color: $color-led-replace;
        color: white;
    }

    &.save {
        background-color: $color-green-bg;
        color: white;
    }

    &.add {
        background-color: $color-blue-bg;
        color: white;
    }

    &.saved::before {
        display:flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        top:0;
        left:0;
        width: 100%;
        height:100%;
        content:'SAVED';
        background-color: $color-led-on;
        color: white;
        font-weight: bold;
        border-radius: 0.2em;
    }
}

.toggle {
    display: inline-block;
    position: relative;
    vertical-align: top;
    text-align: left;
    margin: 0 1em 1em 0;
    background: #fff;
    border-radius: 0.5em;
    padding: 1.5em;
    width: 9.5em;
    height: 12em;
    color: #444;

    .name {
        position: absolute;
        display: block;
        bottom: 1.5em;
        left: 1.5em;
        width: calc(100% - 3em);
        text-transform: capitalize;
    }

    .indicator {
        position: relative;
        width: 100%;
        text-align: left;
        color: $color-green-bg;
        font-weight: bold;

        .led {
            display:block;
            width: 0.5em;
            height: 0.5em;
            border-radius:0.25em;

            &.on {
                background-color: $color-led-on;
            }

            &.off {
                background-color: $color-led-off;
            }

            &.replace, &.delete {
                background-color: $color-led-replace !important;
            }

            &.warn {
                background-color: $color-led-warn;
            }
        }
    }

    &.on {
        .indicator .led {
            background-color: $color-led-on;
        }
    }

    &.off {
        .indicator .led {
            background-color: $color-led-off;
        }
    }

    &.unavailable {
        opacity: 0.5;
    }

    &.unselected {
        opacity: 0.5;
    }

    &.selected {
        opacity: 1;
        background-color: $color-green-bg;
        color: white;
        font-weight: bold
    }

}

.list-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    position: relative;
    text-align: left;
    border-radius: 5px;
    width: 100%;
    height: 4em;

    & > div {
        height:100%;
        padding: 1em 2em;
    }

    .name {
        flex:1;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding-left: 0;
        cursor: pointer;
    }

    .indicator {
        flex: 0 0 5em;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        padding:0;

        .led {
            display:block;
            width: 0.5em;
            height: 0.5em;
            border-radius:0.25em;

            &.on {
                background-color: $color-led-on;
            }

            &.off {
                background-color: $color-led-off;
            }

            &.replace {
                background-color: $color-led-replace;
            }

            &.warn {
                background-color: $color-led-warn;
            }
        }
    }

    &.on {
        .indicator .led {
            background-color: $color-led-on;
        }
    }

    &.off {
        .indicator .led {
            background-color: $color-led-off;
        }
    }

    &.unavailable {
        opacity: 0.5;
    }

    &.selected {
        font-weight: bold;
    }

}

.table-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    position: relative;
    text-align: left;
    border-radius: 5px;
    width: 100%;
    padding: 0.5em 0;

    &.hide {
        // padding: 0;
    }

    .indicator {
        flex: 0 0 5em;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;

        .led {
            display:block;
            width: 0.5em;
            height: 0.5em;
            border-radius:0.25em;

            &.on {
                background-color: $color-led-on;
            }

            &.off {
                background-color: $color-led-off;
            }

            &.replace {
                background-color: $color-led-replace;
            }

            &.warn {
                background-color: $color-led-warn;
            }
        }
    }

    &.unavailable {
        opacity: 0.5;
    }

    & > div {
        flex: 1;

        &.indicator, &.user-action {
            flex: 0 0 5em;
        }

        &.extend {
            flex: 2;
        }

        &:last-child {
            text-align: right;
        }
    }
}

i.fas {
    &.on {
        color: $color-led-on;
    }

    &.off {
        color: $color-led-off;
    }

    &.replace {
        color: $color-led-replace;
    }

    &.warn {
        color: $color-led-warn;
    }
}

.color-pallet {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    vertical-align: top;
    width: 100%;
    height: 100%;

    & div {
        background-color: #ccc;
        border-radius:50%;
        height: 2rem;
        width: 2rem;
        margin-right: 1em;
    }
}

.popup {
    position: fixed;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    width: 100vw;
    top: 0;
    left: 0;
    z-index: 500;
    background-color: rgba(0,0,0,0.75);
    transition: all 1s ease;

    & > div {
        background-color: white;
        text-align: left;
        padding: 2em;
        min-width: 50vw;
        max-width: 80vw;
        max-height: 80vh;
        overflow-y: auto;
        overflow-x: hidden;
    }
}

.spinner {
    display: block;
    text-align: center;
    font-size: 2em;
    color: $color-led-on;
    padding: 3em;
    animation-name: spin;
    animation-duration: 2000ms;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
}

.no-style {
    border:none !important;
    padding:0 !important;
    margin:0 !important;
}
