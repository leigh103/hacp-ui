
.popup {
    position: fixed;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    width: 100vw;
    top: 0;
    left: 0;
    z-index: 500;
    background-color: rgba(0,0,0,0.75);
    transition: all 1s ease;

    & > div {
        background-color: white;
        text-align: left;
        padding: 2em;
        min-width: 50vw;
        max-width: 80vw;
        max-height: 80vh;
        overflow-y: auto;
        overflow-x: hidden;
    }
}
